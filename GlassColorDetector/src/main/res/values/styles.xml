<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ColorDetector.Color.Text" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/color_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/color_text_padding</item>
    </style>

    <style name="GreenProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/green_progress_horizontal_holo_dark
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/green_progress_indeterminate_horizontal_holo_dark
        </item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="RedProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/red_progress_horizontal_holo_dark
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/red_progress_indeterminate_horizontal_holo_dark
        </item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

</resources>
