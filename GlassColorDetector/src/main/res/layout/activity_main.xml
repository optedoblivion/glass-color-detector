<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ColorDetectorActivity">

    <TextureView
        android:id="@+id/tv_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/view_color_viewport"
        android:layout_width="12dp"
        android:layout_height="9dp"
        android:layout_centerInParent="true"
        android:background="@drawable/square_border"/>

    <TextView
        android:id="@+id/tv_color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/color_text_bottom_margin"
        style="@style/ColorDetector.Color.Text"
        android:text="@string/sample_color"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            layout="@layout/widget_color_pbar"
            android:id="@+id/cpb_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include
            layout="@layout/widget_color_pbar"
            android:id="@+id/cpb_g"
            android:layout_below="@id/cpb_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include
            layout="@layout/widget_color_pbar"
            android:id="@+id/cpb_b"
            android:layout_below="@id/cpb_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>
